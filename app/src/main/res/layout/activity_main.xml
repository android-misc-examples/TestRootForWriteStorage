<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.pgp.testrootforwritestorage.MainActivity">

    <Button
        android:onClick="writeStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write file (standard)"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:onClick="writeInExternalShellAsRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write file with external shell (root)"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:onClick="writeInExternalShellAsStdUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write file with external shell"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp" />
</LinearLayout>
